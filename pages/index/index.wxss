/**index.wxss**/
.index {
  min-height: 100vh;
  font-size: 24px;
  color: white;
}

.location {
  border: 2rpx solid #FF5252;
  border-radius: 30px;
  width: 400rpx;
  margin: 20rpx auto 40rpx auto;
  padding: 10rpx 10rpx;
  background-color: #FF5252;
}

.thisCityName {
  display: inline-block;
  border: 1rpx solid #2a579a;
  border-radius: 8rpx;
  padding: 10rpx 10rpx;
  font-size: 30rpx;
  color: #2a579a;
  text-align: center;
  min-width: 149.5rpx;
  margin: 16rpx;
}

.hotcity-common {
  font-size: 35rpx;
  color: #666;
  padding-bottom: 0;
  margin: 8rpx 0;
  margin-left: 16rpx;
}

.banner {
  height: 400px;
  background-color: #ddd;
}

.customSwiper {
  height: 420rpx;
  position: relative;
}

.customSwiper swiper {
  height: 100%;
}

.tab {
  height: 7orpx;
  position: absolute;
  bottom: 0;
  display: flex;
  width: 100%;
  text-align: center;
  justify-content: center;
  align-items: center;
}

.tab .tab-item {
  background-color: #ccc;
  height: 50rpx;
  width: 50rpx;
  line-height: 50rpx;
  font-size: 12rpx;
  color: #fff;
  border-radius: 4px;
  margin-right: 10px;
}

.tab .tab-item.selected {
  background-color: #2a579a;
}

.weatherwrap {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 15rpx 15rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top: 0rpx;
  color: #666;
  font-size: 15px;
  background-color: #f5f5f5;
}

/*当天天气信息*/
.info {
  margin-top: 5rpx;
  width: 100%;
  height: 200px;
}

/*城市名称*/
.city {
  margin: 10rpx;
  border-bottom: 1px solid #2a579a;
}

/*当天温度*/
.temp {
  font-size: 100rpx;
  line-height: 130rpx;
  text-align: center;
  padding-top: 20rpx;
  color: #2a579a;
}

/*感冒描述*/
.weather {
  line-height: 22px;
  margin: 20rpx;
  padding: 0 10px;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.life {
  line-height: 22px;
  margin: 5px 0;
  padding: 0 5px;
}

.changeCity {
  margin-right: 5rpx;
  vertical-align: bottom;
}

.course-list {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

.course-item {
  display: flex;
  flex-direction: row;
  height: 100rpx;
  /*width属性解决标题文字太短而导航缩略偏移*/
  width: 100%;
  border-bottom: 1px solid #2a579a;
}

.course-text {
  display: flex;
  flex-direction: column;
}

.course-stamp {
  font-size: 35rpx;
  color: darkgray;
  padding: 0 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.course-title {
  margin: 0rpx;
  font-size: 35rpx;
  color: rgb(27, 27, 27);
  overflow: hidden;
  text-overflow: ellipsis;
}

